extends ../layouts/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center font-bold text-3xl text-yellow-600")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold")(for="nombre") Tu nombre
                        input#nombre(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")(placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')

                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold")(for="email") Tu Email
                        input#email(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email : '') 
                    
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold")(for="password") Tu Password
                        input#password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")(placeholder="Tu password" type="password" name="password")

                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold")(for="nombre") Repetir Password
                        input#repetir_password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")(placeholder="Repite tu password" type="password" name="repetir_password")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login")(class="text-gray-500 text-xs") Ya tienes cuenta? Inicia sesion
                        a(href="/auth/olvide-password")(class="text-gray-500 text-xs") Olvide mi Password
                    input(type="submit" value="Crear Cuenta" 
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3")